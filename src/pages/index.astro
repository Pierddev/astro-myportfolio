---
import Layout from "../layouts/Layout.astro";
import Mycard from "../components/mycard.astro";
import IconArrowRight from "../components/icons/IconArrowRight.astro";
import IconArrowTopRight from "../components/icons/iconArrowTopRight.astro";
import ContactForm from "src/components/ContactForm.astro";
import Spacer from "src/components/Spacer.astro";
import logoAstro from "../assets/stacks/astro.webp";
import { Image } from "astro:assets";
import SioDashImg from "../assets/project-siodash.webp";
import logoFlask from "../assets/stacks/flask.webp";
import logoJinja from "../assets/stacks/jinja.webp";
import logoVercel from "../assets/stacks/vercel.webp";
import logoPostgresql from "../assets/stacks/postgresql.webp";
---

<Layout>
    <!-- Peut être utiliser Grid au lieu de Flex, pour plus de souplesse vis à vis de la page About -->
    <section class="flex flex-col lg:flex-row justify-center w-full">
        <Mycard />
        <div
            class="flex flex-col items-center w-full lg:w-1200 mt-20 lg:mt-170"
        >
            <p
                class="text-32 sm:text-40 md:text-50 lg:text-60 xl:text-80 font-semibold text-center"
            >
                Développeur Web &<br />Administrateur Systèmes
            </p>
            <p
                class="text-15 text-white/80 text-center pt-40 w-600 max-w-[80%]"
            >
                Passionné d’informatique, je me spécialise en informatique
                réseau et cybersécurité. Curieux et rigoureux, j’aime comprendre
                et optimiser les systèmes. Découvrez mon parcours !
            </p>
            <a
                href="/contact"
                class="group order-first lg:order-0 flex space-x-15 items-center bg-card border-card-border border-1 hover:text-white text-white/60 mt-20 lg:mt-60 mb-20 lg:mb-0 px-20 rounded-full transition-colors"
            >
                <span class="relative flex size-10">
                    <span
                        class="absolute inline-flex h-full w-full animate-ping rounded-full bg-red-400 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex size-10 rounded-full bg-red-600"
                    ></span>
                </span>
                <p class="text-12 lg:text-16">
                    Vous pouvez me contacter à tout moment
                </p>
                <div class="flex items-center relative size-20">
                    <IconArrowRight
                        class="absolute size-20 left-0 group-hover:left-10 transition-all ease-in-out"
                    />
                </div>
            </a>
            <!-- Section Projet à la une -->
            <div
                class="flex flex-col w-full justify-center items-center mt-60 px-20 xl:px-0"
            >
                <span class="text-30 font-semibold">Projet à la une</span>
                <Spacer class="my-20" />
                <!-- Card avec image en background -->
                <a
                    href="https://siodash.fr/"
                    target="_blank"
                    class="group bloc-card relative w-full max-w-700 h-400 lg:h-450 rounded-45 overflow-hidden cursor-pointer"
                >
                    <!-- Background Image -->
                    <Image
                        class="absolute inset-0 w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-105"
                        src={SioDashImg}
                        alt="Aperçu du projet SioDash"
                        loading={"eager"}
                    />
                    <!-- Gradient Overlay -->
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent"
                    >
                    </div>
                    <!-- Glow effect on hover -->
                    <div
                        class="absolute inset-0 opacity-0 group-hover:opacity-100 bg-gradient-to-t from-purple-900/30 via-transparent to-transparent transition-opacity duration-500"
                    >
                    </div>
                    <!-- Content -->
                    <div
                        class="absolute bottom-0 left-0 right-0 p-25 lg:p-35 flex flex-col gap-15"
                    >
                        <!-- Title & Description -->
                        <div>
                            <h3
                                class="text-25 lg:text-35 font-bold text-white group-hover:text-purple-200 transition-colors"
                            >
                                SioDash
                            </h3>
                            <p
                                class="text-12 lg:text-14 text-white/70 mt-8 max-w-500 line-clamp-2"
                            >
                                Une plateforme centralisée pour les étudiants en
                                BTS SIO permettant de suivre leurs missions,
                                compétences et parcours professionnel.
                            </p>
                        </div>
                        <!-- Tech Stack -->
                        <div class="flex flex-wrap gap-8">
                            <div
                                class="flex items-center gap-5 bg-white/10 backdrop-blur-sm border-1 border-white/20 rounded-full px-12 py-5"
                            >
                                <Image
                                    src={logoFlask}
                                    alt="Flask"
                                    class="size-16"
                                />
                                <span class="text-11 text-white/90">Flask</span>
                            </div>
                            <div
                                class="flex items-center gap-5 bg-white/10 backdrop-blur-sm border-1 border-white/20 rounded-full px-12 py-5"
                            >
                                <Image
                                    src={logoJinja}
                                    alt="Jinja"
                                    class="size-16"
                                />
                                <span class="text-11 text-white/90">Jinja</span>
                            </div>
                            <div
                                class="flex items-center gap-5 bg-white/10 backdrop-blur-sm border-1 border-white/20 rounded-full px-12 py-5"
                            >
                                <Image
                                    src={logoPostgresql}
                                    alt="PostgreSQL"
                                    class="size-16"
                                />
                                <span class="text-11 text-white/90"
                                    >PostgreSQL</span
                                >
                            </div>
                            <div
                                class="flex items-center gap-5 bg-white/10 backdrop-blur-sm border-1 border-white/20 rounded-full px-12 py-5"
                            >
                                <Image
                                    src={logoVercel}
                                    alt="Vercel"
                                    class="size-16"
                                />
                                <span class="text-11 text-white/90">Vercel</span
                                >
                            </div>
                        </div>
                        <!-- CTA indicator -->
                        <div
                            class="flex items-center gap-8 text-white/60 group-hover:text-white transition-colors"
                        >
                            <span class="text-12 lg:text-14 font-medium"
                                >Voir le projet</span
                            >
                            <IconArrowTopRight
                                class="size-18 group-hover:translate-x-[3px] group-hover:-translate-y-[3px] transition-transform"
                            />
                        </div>
                    </div>
                </a>
            </div>
            <div class="flex flex-col w-full justify-center items-center mt-60">
                <span class="text-30 font-semibold">Mon choix du moment</span>
                <Spacer class="my-20" />
                <div
                    class="bloc-card relative flex items-center space-y-20 lg:space-y-0 rounded-45 p-15 xl:p-30 mx-20 xl:mx-0"
                >
                    <Image
                        class="w-50 h-63 xl:w-100 xl:h-auto ml-15 xl:ml-0"
                        src={logoAstro}
                        alt="Logo du Framework Astro"
                        loading={"eager"}
                    />
                    <div class="spacer-choice"></div>
                    <div
                        class="flex flex-col lg:flex-row items-center justify-center space-y-30 lg:space-y-0"
                    >
                        <div class="text-center">
                            <div
                                class="text-20 lg:text-25 xl:text-30 font-semibold"
                            >
                                Astro
                            </div>
                            <div
                                class="text-12 lg:text-15 max-w-320 xl:max-w-500"
                            >
                                <div>
                                    Un framework ultra rapide, simple et moderne
                                    pour créer des sites performants avec une
                                    structure propre et flexible.
                                </div>
                                <div>
                                    Mon portfolio est entièrement construit avec
                                    Astro.
                                </div>
                            </div>
                        </div>
                        <div class="spacer-choice hidden lg:inline"></div>
                        <a
                            href="https://astro.build/"
                            class="flex lg:flex-col justify-center items-center text-white/50 hover:text-white transition bg-card border-1 border-card-border lg:border-none lg:bg-transparent rounded-full pr-20 lg:pr-0 pl-10 lg:pl-0"
                            target="_blank"
                        >
                            <IconArrowTopRight
                                class="size-30 lg:size-50 xl:size-75"
                            />
                            <span class="text-12 xl:text-15"
                                >En savoir plus</span
                            >
                        </a>
                    </div>
                </div>
            </div>
            <Spacer class="mt-20" />
            <div class="mt-50">
                <ContactForm />
            </div>
        </div>
    </section>
</Layout>
