---
import LinkedInIcon from "../assets/icon-linkedin.svg";
import Layout from "../layouts/Layout.astro";
import Mycard from "../components/mycard.astro";
import IconMail from "../components/icons/IconMail.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="Contact">
  <section class="flex justify-center w-full">
    <div class="hidden lg:inline">
      <Mycard />
    </div>
    <div class="flex flex-col items-center w-full lg:w-1200 pt-100 lg:pt-170">
      <div class="flex flex-col items-center w-full px-20">
        <p class="text-40 lg:text-50 font-semibold">Me contacter,</p>
        <p
          class="text-12 lg:text-15 text-center text-white/70 mt-30 w-600 max-w-[80%]"
        >
          Intéressé par mon profil ? N’hésitez pas à me contacter pour échanger
          ensemble !
        </p>
        <a
          href="mailto:pierre.duault.pro@gmail.com"
          class="flex space-x-10 px-10 items-center bg-card hover:bg-white/10 border-1 border-card-border rounded-10 mt-30"
        >
          <IconMail class="size-40 text-white/80" />
          <div class="px-10 text-15 my-5">
            <p>Par mail à l'adresse suivante :</p>
            <p class="italic underline">pierre.duault.pro@gmail.com</p>
          </div>
        </a>
        <a
          target="_blank"
          href="http://www.linkedin.com/in/pierre-duault-311573218"
          class="bg-card border-1 border-card-border flex items-center space-x-10 my-30 hover:bg-white/10 rounded-10 transition-colors"
        >
          <img src={LinkedInIcon.src} alt="LinkedIn icon" class="size-48" />
          <p class="text-15 mr-10">Via LinkedIn</p>
        </a>
      </div>
      <ContactForm/>
    </div>
    <!-- modify this form HTML and place wherever you want your form -->
  </section>
</Layout>
